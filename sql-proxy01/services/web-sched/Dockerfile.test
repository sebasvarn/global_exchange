# pull official base image
FROM python:3.11.3-slim-bullseye
ENV TZ="America/Asuncion"
# create directory for the app user
RUN mkdir -p /home/app

# create the app user
RUN addgroup --system app && adduser --system --group app

# create the appropriate directories
ENV HOME=/home/app
ENV APP_HOME=/home/app/sched-test
RUN mkdir $APP_HOME
WORKDIR $APP_HOME

# install dependencies
RUN apt-get update && apt-get install -y --no-install-recommends netcat
## COPY --from=builder /usr/src/sched-test/wheels /wheels
## COPY --from=builder /usr/src/sched-test/requirements.txt .

COPY ./requirements.txt $APP_HOME

RUN pip install --upgrade pip
#RUN pip install --no-cache /wheels/*
RUN pip install --no-cache-dir -r requirements.txt

# copy entrypoint-test.sh
COPY ./entrypoint.test.sh $APP_HOME
RUN chmod +x entrypoint.test.sh

# copy fs_proxy
COPY . $APP_HOME

# Install procps to get the top command
USER root
RUN apt-get update && apt-get install -y procps

# Create logs directory with proper permissions
RUN mkdir -p $APP_HOME/logs
RUN chown -R app:app $APP_HOME/logs
RUN chmod -R 755 $APP_HOME/logs

# chown all the files to the app user
RUN chown -R app:app $APP_HOME

# change to the app user
USER app

# run entrypoint.test.sh
ENTRYPOINT ["/home/app/sched-test/entrypoint.test.sh"]